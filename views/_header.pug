header.header
    nav.nav.nav--tours 
        a.nav__el(href=`/`) All tours
    .header__logo
        img(src=`/img/logo-white.png` alt=`Natours logo`)
    nav.nav.nav--user 
        if user
            a.nav__el.nav__el--logout( onclick='logout()') Logout
            a.nav__el(href=`/me`)
                img.nav__user-img(src=`/img/users/${user.photo}` alt=`User ${user.name}`)
                span= user.name.split(' ')[0]
        else
            button.nav__el
                a.nav__el(href=`/login/`) login
            button.nav__el.nav__el--cta Sign up